---
import { getCollection, type CollectionEntry } from "astro:content";
import BlogOverview from "../../../components/BlogOverview";
import Layout from "../../../layouts/Layout.astro";

interface Props {
  category: CollectionEntry<"categories">;
}

export async function getStaticPaths() {
  const categories = await getCollection("categories");
  return categories.map((category) => ({
    params: { category: category.data.slug },
    props: { category },
  }));
}

const posts = await getCollection("posts");
const {category} = Astro.props;
posts.sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());
const filteredPosts = posts.filter((post) => post.data.category.slug === category.data.slug);
---
<Layout
  title={`${category.data.title} - Blog - 2martens.de`}
  description={`2martens.de - The official website of Jim Martens`}
  appName="2martens.de"
  logoTitle="Jim Martens"
>
  <BlogOverview title={category.data.title} description={`BeitrÃ¤ge in der Kategorie ${category.data.title}`} posts={filteredPosts} basehref="/posts" />
</Layout>